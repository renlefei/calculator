<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="FunctionalButtons">
        <item name="android:textSize">40dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorFunButtonTxt</item>
        <item name="android:background">@drawable/functional_round_rectangle_button</item>
    </style>

    <style name="NumberButtons">
        <item name="android:textSize">40dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:textColor">@color/colorNumberButtonTxt</item>
        <item name="android:background">@drawable/number_round_rectangle_button</item>
    </style>

    <style name="EqualButtons">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/colorEqualButtonTxt</item>
        <item name="android:background">@drawable/equal_round_rectangle_button</item>
    </style>

</resources>
